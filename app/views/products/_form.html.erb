<div class="mt-4">
    <%= form_with model:@product do |form| %>
        <div class="mb-4">
            <%= form.text_field :title, class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none", placeholder:'Titulo' %>
        </div>
        <div class="mb-4">
            <%= form.text_area :description, class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none", placeholder:"Description" %>
        </div>
        <div class="mb-4">
            <%= form.file_field :image  %>
        </div>
        
        <hr>
        <div class="mt-4 mb-4">
            <h3 class="text-base">Categorias</h3>
            <%= form.collection_check_boxes :category_ids, Category.visible, :id, :title do  |category| %>
                <%= category.label class:"mt-1 inline-block text-sm text-gray-500" do%>
                    <%= category.check_box + category.text%>
                <% end %>
            <% end %>
        </div>

        <div class="mb-4">
            <%= form.submit 'Guardar cambios', class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow" %>
        </div>
    <% end %>
</div>

