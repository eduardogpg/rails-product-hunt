<div class="flex flex-wrap">
    <div class="w-full lg:w-1/3 px-4 mb-6">
        <%= link_to root_path do %>
            <div class="h-80 lg:h-40">
                <% if product.image %>
                    <%= image_tag product.image, class:"w-full h-full object-cover rounded-xl" %>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="w-full lg:w-2/3 px-4">
        <span class="inline-block mb-4 text-xs text-gray-500"><%= date_format(product.created_at) %></span>
        <h2 class="mb-4 text-3xl font-semibold font-heading"><%= product.title %></h2>
        <p class="mb-4 text-gray-500"><%= simple_description(product.description) %></p>
        <%= link_to  "Read More", product, class:"text-lg font-medium text-red-500 underline hover:no-underline" %>
    </div>
</div>